<script>
    sideBar_button.addEventListener('click',function(e){
        $(e.target).toggleClass('rotate-icon');
        $('#sideBar').toggleClass('ivu-layout-sider-collapsed');
        $('#sideBar').find('ul').toggleClass('collapsed-menu')
        if( !$('#sideBar').find('ul').hasClass('collapsed-menu')){
            $('#sideBar').css({
                'width':'200px',
                'min-width':'200px',
                'max-width':'200px',
                "flex":'0 0 200px'
            });
        }else{
            $('#sideBar').css({
                'width':'78px',
                'min-width':'78px',
                'max-width':'78px',
                "flex":'0 0 78px'
            });
        }
    })
</script>